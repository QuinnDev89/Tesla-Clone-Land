---
import LandingHeader from "../components/LandingHeader.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Tesla Page">
	<main>
		<LandingHeader />

		<section class="bg-black h-screen w-screen text-center overflow-hidden">
			<div class="z-30 relative h-full flex flex-col">
				<header>
					<h2 class="text-white pt-40 text-[40px] font-medium">
						Disfrute de Tesla
					</h2>
					<p class="text-white text-sm">
						Programe una prueba de conduccion hoy mismo
					</p>
				</header>
				<footer
					class="flex flex-col flex-grow justify-end pb-28 text-white"
				>
					<div>
						<a
							href=""
							class="border-2 bg-white/10 backdrop-blur-3xl rounded font-medium text-white px-10 py-2 hover:bg-white hover:text-black transition-colors"
						>
							Prueba de conduccion
						</a>
					</div>
				</footer>
			</div>

			<div class="absolute top-0 bottom-0 h-full w-full z-10">
				<video
					class="object-center object-cover h-full w-full"
					autoplay
					muted
					loop
					src="/public_video.webm"></video>
			</div>
		</section>
	</main>
</Layout>

